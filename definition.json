{
	"structures": [
		{ "name": "employee-0", "communications": 0},
		{ "name": "employee-1", "communications": 0},
	],
	"roles": [
		{
			"name": "sender", "attributes": [
				{ "name": "FTE" },
			]
		},
		{
			"name": "receiver", "attributes": [
				{ "name": "FTE" },
				{ "name": "emails", "writable": true }
			]
		}
	],
	"behaviours": [
		{
			"name": "send",
			"roles": ["sender", "receiver"],
			"action": "receiver.communications += 1"
		}
	],
	"constraints": [
		{
			"name": "send limit",
			"roles": ["sender", "receiver"],
			"condition": "(Math.random() < 0.5) ? (receiver.emails < 10) : false"
		}
	],
	"interactions": [
		{
			"name": "communication",
			"constraints": ["send limit"],
			"behaviours": ["send"]
		}
	]
}
